<Application x:Class="NP.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NP.WPF"
             xmlns:syntax="http://schemas.lepo.co/wpfui/2022/xaml/syntax"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:cnvts="clr-namespace:NP.Support.Local.Converters;assembly=NP.Support"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
             
            </ResourceDictionary.MergedDictionaries>

            <cnvts:BooleanToInverseConverter x:Key="BooleanToInverseConverter"/>
            <cnvts:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        </ResourceDictionary>

    </Application.Resources>
</Application>
